{
  "name": "swift-work-board-server",
  "version": "1.0.0",
  "description": "Express server for Swift Work Board",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon --watch index.js",
    "pm2:start": "pm2 start index.js --name task-flow-server",
    "pm2:stop": "pm2 stop task-flow-server",
    "pm2:restart": "pm2 restart task-flow-server",
    "pm2:delete": "pm2 delete task-flow-server",
    "pm2:logs": "pm2 logs task-flow-server",
    "pm2:status": "pm2 status",
    "pm2:monit": "pm2 monit",
    "setup-db": "node setup-database.js",
    "create-tables": "node create-tables-now.js",
    "create-tables-admin": "node create-tables-admin.js",
    "create-all-tables": "node migrations/create-all-tables.js",
    "check-tables": "node check-tables.js",
    "show-sql": "node create-tables-direct.js",
    "migrate": "node migrate-db.js",
    "migrate-local": "node migrate-local.js",
    "migrate-api": "node create-tables-api.js",
    "migrate-http": "node execute-sql-http.js",
    "fix-tokens": "node fix-token-columns.js",
    "monitor:start": "node git-monitor.js",
    "monitor:pm2": "pm2 start git-monitor.js --name git-monitor --interpreter node",
    "pm2:all": "pm2 start ecosystem.config.cjs",
    "pm2:stop:all": "pm2 stop ecosystem.config.cjs",
    "pm2:delete:all": "pm2 delete ecosystem.config.cjs"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@supabase/supabase-js": "^2.78.0",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.10",
    "papaparse": "^5.5.3",
    "pdf-parse": "^2.4.5",
    "pg": "^8.16.3",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "pm2": "^5.3.0"
  }
}
