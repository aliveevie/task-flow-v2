# Server Configuration
PORT=3000

# Database Configuration
# PostgreSQL connection string (required for main database operations)
connectiondb=postgresql://user:password@host:port/database

# Alternative database URL for local development
DATABASE_URL=


# Direct PostgreSQL connection string for Supabase
SUPABASE_CONNECTION_STRING=postgresql://postgres:password@db.your-project.supabase.co:5432/postgres

# JWT Configuration
# Secret key for JWT token generation (change this to a secure random string)
JWT_SECRET=your-secret-key-change-this

# Email Configuration
# Email address for sending emails
EMAIL=

# Password for email account
EMAIL_PASSWORD=


